@model IEnumerable<ModelLayer.Models.OrderHistory>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<h3> View Order History for Specific Store</h3>
<form asp-action="StoreOrderHistory" asp-route-id="storeId">
    <div class="form-group">
        <label for="storeId" class="control-label"></label>
        <select for="storeId" name="storeId" class="form-control" asp-items="ViewBag.StoreId"></select>
        <span for="storeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="View" class="btn btn-primary" />
    </div>
</form>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.store)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StoreId)
                </td>
                <td>
                    <!--

                    (+5: order history can be sorted by earliest, latest, cheapest, most expensive, etc)
                          <a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |
                         <a asp-action="Details" asp-route-id="@item.OrderId">Details</a> |
                         <a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>
                    -->
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="OrderBy" asp-route-id="1">View Earliest</a> |
<a asp-action="OrderBy" asp-route-id="2">View Latest</a> |
<a asp-action="OrderBy" asp-route-id="3">View Cheapest</a> |
<a asp-action="OrderBy" asp-route-id="4">View Most Expensive</a>

